<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="/styles/main.css" rel="stylesheet"/>
</head>
<body>
    
       
  <%- include("partials/background.ejs") %>
        <div class="container weatherInfo weather-info-container">
            <div class="p-5 text-center  rounded-5 home">
              <img class=" bi mt-4 mb-3" src="/assets/weather-application.svg" alt="Weather app icon">
              <h1 class="text-body-emphasis">WeatherNow</h1>
              <p class="col-lg-8 mx-auto fs-5 text-white">
                WeatherNow is your go-to app for all things weather-related. Whether you're planning your day, your week, or your next adventure, WeatherNow provides accurate forecasts, real-time updates, and intuitive features to keep you informed and prepared
              </p>
              <form action="/currentLocation" method="POST">
                <input class="latitude" name="inputLocationLat" type="hidden" value="" />
                <input class="logitude" name="inputLocationLon" type="hidden" value="" />
                <button class="d-inline-flex align-items-center btn btn-primary btn-lg px-4 rounded-pill checkWeather" type="submit">
                 Get Currrent Weather
                </button>
              </form>
              
              <div class="d-inline-flex gap-2 mb-5">
              </div>
              
            </div>
          </div>
   
    <script>
      
        $(".checkWeather").on("click", function(){
         
          console.log("success");

        });
     
    function success(pos) {
    const crd = pos.coords;
  
    console.log("Your current position is:");
    console.log(`Latitude : ${crd.latitude}`);
    console.log(`Longitude: ${crd.longitude}`);
    const lat  = crd.latitude;
    const lon  = crd.longitude;
    const locationLat = $(".latitude");
    locationLat.attr("value", lat)
    const locationLon = $(".logitude");
    locationLon.attr("value", lon)
  }
  
  function error(err) {
    console.warn(`ERROR(${err.code}): ${err.message}`);
  }

  navigator.geolocation.getCurrentPosition(success, error);
  
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>